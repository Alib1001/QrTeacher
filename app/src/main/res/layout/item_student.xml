<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoImgView"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:src="@drawable/ic_image_profile"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/photoImgView"
        android:layout_alignTop="@id/photoImgView"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="16sp"
        android:layout_below="@id/textViewName"
        android:layout_alignStart="@id/textViewName"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        android:textSize="16sp"
        android:layout_below="@id/textViewId"
        android:layout_alignStart="@id/textViewId"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewSpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:textSize="16sp"
        android:layout_below="@id/textViewGroup"
        android:layout_alignStart="@id/textViewGroup"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textViewSpecialization" />

</RelativeLayout>
